generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Request {
  id           String   @id @default(cuid())
  employeeName String
  service      String
  category     String   // Ex: "Shoes", "Gloves"
  size         String   // Ex: "42", "M", "TU"
  reason       String   // Ex: "Usure", "Perte"
  status       String   @default("Pending") // Pending, Ordered, Delivered, Rejected
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model StockItem {
  id           String   @id @default(cuid())
  category     String   @unique
  label        String
  minThreshold Int
  stock        Json     // Structure : {"42": 5, "43": 0, "M": 10}
  updatedAt    DateTime @updatedAt
}
