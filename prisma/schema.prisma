generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Request {
  id           String        @id @default(cuid())
  employeeName String
  firstName    String?
  service      String
  reason       String
  status       String        @default("Pending") // Pending, Ordered, Rejected
  items        RequestItem[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model RequestItem {
  id              String  @id @default(cuid())
  requestId       String
  request         Request @relation(fields: [requestId], references: [id], onDelete: Cascade)
  category        String
  size            String
  snapshottedPrice Float   @default(0) // Nouveau: Prix fig√© au moment du clic
  quantity        Int     @default(1)
}

model StockItem {
  id           String   @id @default(cuid())
  category     String   @unique
  label        String   @default("")
  minThreshold Int      @default(5)
  price        Float    @default(0)
  stock        Json     // Structure : {"42": 5, "43": 0, "M": 10}
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("USER") // "ADMIN" or "USER"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
